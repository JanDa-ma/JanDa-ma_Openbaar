@model AandelenApplicatie.Models.Company.ViewModels.CompanyOverviewViewModel

@{
    ViewData["Title"] = "Overview";
}

<h1>Overview</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Number of stocks</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.StockList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Stocks.Count()</td>

                <td>
                    <a asp-controller="Company" asp-action="DetailsStockList" asp-route-id="@item.StockListId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>