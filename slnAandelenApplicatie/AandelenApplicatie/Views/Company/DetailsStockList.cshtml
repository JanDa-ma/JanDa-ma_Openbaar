@model AandelenApplicatie.Models.Company.ViewModels.StockListViewModel

@{
    ViewData["Title"] = "DetailsStockList";
}

<h1>@Model.Name</h1>
<p>
    <a asp-action="CreateStock">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Stock name </th>

            <th>Is sold</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Stocks)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.IsSold
                </td>
                <td class="row">
                    <a asp-action="DetailsStock" asp-route-id="@item.StockId" class="btn btn-primary">Details</a>
                    <form asp-action="DeleteStock" asp-route-id="@item.StockId">
                        <input type="hidden" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>